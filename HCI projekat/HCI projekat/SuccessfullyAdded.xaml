<Window x:Class="HCI_projekat.SuccessfullyAdded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:HCI_projekat"
        mc:Ignorable="d"
        Title="SuccessfullyAdded" Height="200" Width="500">
    <Grid>
        <Label Width="350" Height="50" FontSize="20">Successfully added</Label>
        <Button Width="80" Height="30" 
                            materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" BorderBrush="#FF116FA4"
                            Background="#FF116FA4" Foreground="White" ToolTip="Cancel" Content="Ok"
                            HorizontalAlignment="Center" VerticalAlignment="Center" Margin="240,-5,0,0" FontSize="13.5" Click="Button_Click"/>


    </Grid>
</Window>
